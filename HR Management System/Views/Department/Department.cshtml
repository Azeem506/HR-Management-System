            dataType: 'json',
            success: function (d) {
                //var dd = JSON.parse(d).d;
                //var department = JSON.parse(dd);
                //console.log(department);

                console.log(d);

                $("#did1").val(d.DeptId);
                $("#usernameedit").val(d.UserName);
                $("#password1").val(d.Password);
