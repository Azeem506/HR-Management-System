    </div>
</div>
<script>

    $(".editDepartmentBtn").click(function () {
        var id = $(this).data("id");
        console.log(id);
        //return;
        $.ajax({
            type: "GET",
            url: "/Department/EditDepartment1/?DesignationiD=" + id + "",
            //data: "{DesignationiD:" + id + "}",
