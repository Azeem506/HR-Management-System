
@{
    ViewBag.Title = "AddCompany";
}

<h2>AddCompany</h2>

    
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Add Company</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <form>
                            <div class="form-group">
                                <label>Company Name</label>
                                <input class="form-control" type="text">
                                <select class="select">
                                    <option>Eazisols</option>
                                    <option>Eazisols1</option>
                                    <option>Eazisols2</option>
                                    <option>Eazisols3</option>
                                    <option>Eazisols4</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea cols="30" rows="4" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <label class="display-block">Company Status</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="status" id="product_active" value="option1" checked>
                                    <label class="form-check-label" for="product_active">
                                        Active
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="status" id="product_inactive" value="option2">
                                    <label class="form-check-label" for="product_inactive">
                                        Inactive
                                    </label>
                                </div>
                            </div>
                            <div class="m-t-20 text-center">
                                <button class="btn btn-primary submit-btn">Create Company</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
        </div>
        
   


