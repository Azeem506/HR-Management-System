
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

    <div class="main-wrapper  account-wrapper">
        <div class="account-page">
            <div class="account-center">
                <div class="account-box">
                    <form action="~/Pages/SignUp" method="post">
                        <h1>Sign Up</h1>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil color-blue"></i></span>
                                <input id="fname" name="fname" placeholder="First Name" class="form-control" type="text" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil color-blue"></i></span>
                                <input id="lname" name="lname" placeholder="Last Name" class="form-control" type="text" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                <input id="txtmail" name="txtmail" placeholder="Enter your mail" class="form-control" type="email" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user color-blue"></i></span>
                                <input id="txtLogin" name="txtLogin" placeholder="User Name" class="form-control" type="text" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock color-blue"></i></span>
                                <input id="pswd" name="pswd" placeholder="Password" class="form-control" type="password" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock color-blue"></i></span>
                                <input id="Cpswd" name="Cpswd" placeholder="Confirm Password" class="form-control" type="password" required>
                            </div>
                        </div>
                        <span>@ViewBag.invalidpass</span>

                        <input type="submit" name="btnSubmit1" value="Create Account" />

                     </form>
                </div>
            </div>
        </div>
    </div>
   
