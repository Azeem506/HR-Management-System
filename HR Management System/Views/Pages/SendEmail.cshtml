
@{
    ViewBag.Title = "SendEmail";
}

<h2>SendEmail</h2>


    @if (ViewBag.Error != null)
    {
        <h2 style="text-align:start"> @ViewBag.Error </h2>
    }
    <div style="text-align:center; margin-top:100px">
        <form method="post" action="SendEmail">
            <div class="container">
                <span class="form-control-static" style="color:white">Receiver:</span>
                <input class="form-control" type="text" name="receiver" /><br /><br /><br />
                <span class="form-control-static" style="color:white"> Subject: </span>
                <input class="form-control" type="text" name="subject" /><br /><br /><br />
                <span class="form-control-static" style="color:white"> Message: </span>
                <input class="form-control" type="text" name="message" /><br /><br /><br />
                <input class="btn btn-primary" type="submit" value="Send" /><br />
            </div>
        </form>
    </div>


